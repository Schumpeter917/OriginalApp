<div class="form-wrap">
<!--プロフィールと投稿-->
<% if @user.id == current_user.id %>  
  <div class="product-wrap">
    <ul>
      <li>投稿機能</li>
      <li>プロフィール画像</li>
      <li>プロフィール</li>
    </ul>  
      <% @products.each do |product| %>
      <ul>
        <li class="product">
          <div class="title">
            <%= product.title %>
          </div>
          <div class="image" style="background-image: url(<%= product.image %>)";>
          </div>  
        </li>  
      </ul>
      <% end %>
  </div>    
<% else %>
  <div class="product-wrap">
      <% @products.each do |product| %>
      <ul>
        <li class="product">
          <div class="title">
            <%= product.title %>
          </div>
          <div class="image" style="background-image: url(<%= product.image %>)";>
          </div>  
        </li>  
      </ul>
      <% end %>
  </div>    
<% end %>  
</div>  
